<style >
	body{background: url("<%= asset_path 'img5.jpg' %>");}
	h1{font-family: bold;color: #db34eb;text-align: center;}
	div{text-align: center;}
</style>
<body>
	<p id="notice"><%= notice %></p>
	<h1>Editing Student Attendence Deatails</h1>
	<div>
		<%= render 'form', attendence: @attendence %>
		<%if @college.present? && @department.present? && @student.present? %>
			<%= link_to 'Back',college_department_student_attendences_path(@college,@department,@student,@attendence),class:"btn btn-warning",style:"color:black;" %>
		<%elsif @department.present? && @student.present? %>
			<%= link_to 'Back',department_student_attendences_path(@department,@student,@attendence),class:"btn btn-warning",style:"color:black;" %>
		<%elsif @student.present? %>
			<%= link_to 'Back',student_attendences_path(@student,@attendence),class:"btn btn-warning",style:"color:black;" %>
		<%else%>
			<%= link_to 'Back', attendences_path(@attendence),class:"btn btn-warning",style:"color:black;" %>
		<% end -%>
	</div>
	
</body>
