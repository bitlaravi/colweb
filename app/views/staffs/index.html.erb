<style >
  body{background: url("<%= asset_path 'bc.png' %>");}
  h1{ font-family: bold;font-size: 4.5em;text-align: center;}
  div{text-align: center;}
</style>
<h1>Staffs</h1>
<div>
  <%if @college.present? && @department.present?%>
    <%= link_to 'New Staff', new_college_department_staff_path(@college, @department),class: "btn btn-success",style:"color:black;" %>
    <%= link_to 'back', college_department_path(@college,@department),class: "btn btn-warning",style:"color:black;" %>
  <%elsif  @department.present?%>
    <%= link_to 'New Staff', new_department_staff_path( @department),class: "btn btn-success",style:"color:black;" %>
    <%= link_to 'back', department_path(@department),class: "btn btn-warning",style:"color:black;" %>
  <%else%>
    <%= link_to 'back', department_path(@department),class: "btn btn-warning",style:"color:black;" %>
  <% end -%>
</div><br>
<table class="table table-striped table-bordered ">
  <thead>
    <tr class="table-success">
      <th>S.No</th>
      <th>Staff name</th>
      <th>Posission</th>
      <th>Email</th>
      <th colspan="3">Deatails</th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each_with_index do |staff,i| %>
      <tr class="table-warning">
        <td><%= i+1 %></td>
        <td><%= staff.staff_name %></td>
        <td><%= staff.posission %></td>
        <td><%= staff.email_id %></td>
        <%if @college.present? && @department.present?%>
          <td><%= link_to 'Show', college_department_staff_path(@college,@department,staff),class: "btn btn-info",style:"color:black;"  %>
              <%= link_to 'Edit', edit_college_department_staff_path(@college,@department,staff),class: "btn btn-primary",style:"color:black;"  %>
              <%= link_to 'Destroy', college_department_staff_path(@college,@department,staff),class: "btn btn-danger",style:"color:black;" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%elsif @department.present?%>
          <td><%= link_to 'Show', department_staff_path(@department,staff),class: "btn btn-info",style:"color:black;"  %>
              <%= link_to 'Edit', edit_department_staff_path(@department,staff),class: "btn btn-primary",style:"color:black;"  %>
              <%= link_to 'Destroy', department_staff_path(@department,staff),class: "btn btn-danger",style:"color:black;" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%else%>
          <td><%= link_to 'Show', staff_path(staff),class: "btn btn-info",style:"color:black;" %>
              <%= link_to 'Edit', edit_staff_path(staff) ,class: "btn btn-primary",style:"color:black;"%>
              <%= link_to 'Destroy', staff(staff),class: "btn btn-danger",style:"color:black;", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
