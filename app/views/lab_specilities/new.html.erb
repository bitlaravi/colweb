<style >
	body{background: url("<%= asset_path '113.jpg' %>");}
	h1{font-family: bold;color: #db34eb;text-align: center;}
</style>
<body>
	<h1>Add New Lab </h1>
	<%= render 'form', lab_specility: @lab_specility %>
	<div align="center">
		<%if @college.present? && @department.present?%>
			<%= link_to 'Back',college_department_lab_specilities_path(@college, @department,@lab_specility),class:"btn btn-warning",style:"color:black;" %>
		<%elsif @department.present?%>
			<%= link_to 'Back',department_lab_specilities_path(@department,@lab_specility),class:"btn btn-warning",style:"color:black;" %>
		<%else%>
			<%= link_to 'Back', lab_specilities_path(lab_specility),class:"btn btn-warning",style:"color:black;" %>
		<% end -%>
	</div>
</body>
