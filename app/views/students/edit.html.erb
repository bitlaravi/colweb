<style >
	body{background: url("<%= asset_path 'img5.jpg' %>");}
	h1{font-family: bold;color: #db34eb;text-align: center;}
	div{text-align: center;}
</style>
<body>
	<h1>Editing Student</h1>
	<div>
		<%= render 'form', student: @student %>
		<%if @college.present? && @department.present?%>
			<%= link_to 'Show', college_department_student_path,class:"btn btn-success",style:"color:black;" %> |
			<%= link_to 'Back',college_department_students_path,class:"btn btn-warning",style:"color:black;" %>
		<%else%>
			<%= link_to 'Show',student_path,class:"btn btn-success",style:"color:black;" %> |
			<%= link_to 'Back', students_path ,class:"btn btn-warning",style:"color:black;" %>
		<% end -%>
	</div>
	
</body>
