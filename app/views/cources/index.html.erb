<style >
  body{background: url("<%= asset_path 'bc.png' %>");}
  h1{ font-family: bold;font-size: 4.5em;text-align: center;}
  div{text-align: center;}
  th{text-align: center;}
</style>
<h1>Cources</h1>
<div>
  <%if @college.present? && @department.present?%>
    <%= link_to 'Add New Cource', new_college_department_cource_path(@college, @department),class: "btn btn-success",style:"color:black;" %>
    <%= link_to 'back', college_department_path(@college,@department),class: "btn btn-warning",style:"color:black;" %>
  <%elsif @department.present?%>
    <%= link_to 'Add New Cource', new_department_cource_path(@department),class: "btn btn-success",style:"color:black;" %>
    <%= link_to 'back', department_path(@department),class: "btn btn-warning",style:"color:black;" %>
  <%else%>
    <%= link_to 'Add New Cource', new_cource_path,class: "btn btn-info",style:"color:black;" %>
    <%= link_to 'Back', department_path(@department),class:"btn btn-default",style:"color:black;"  %> 
  <%end%>
</div><br>

<table class="table table-striped table-bordered ">
  <thead>
    <tr class="table-success">
      <th>S.No</th>
      <th>College</th>
      <th>Department</th>
      <th>Cource</th>
      <th colspan="3">Deatails</th>
    </tr>
  </thead>

  <tbody>
    <% @cources.each_with_index do |cource,i| %>
      <tr class="table-warning">
        <td><%= i+1 %></td>
        <td><%= cource.college.college_name %></td>
        <td><%= cource.department.department_name %></td>
        <td><%= cource.cource %></td>
        <%if @college.present? && @department.present?%>
          <td><%= link_to 'View The Deatails', college_department_cource_path(@college, @department,cource),class: "btn btn-info",style:"color:black;" %>    
              <%= link_to 'Edit', edit_college_department_cource_path(@college, @department,cource),class: "btn btn-primary",style:"color:black;" %>    
              <%= link_to 'Delete', college_department_cource_path(@college, @department,cource),class: "btn btn-danger",style:"color:black;", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%elsif @department.present?%>
          <td><%= link_to 'View The Deatails', department_cource_path(@department,cource),class: "btn btn-info",style:"color:black;" %>    
              <%= link_to 'Edit', edit_department_cource_path(@department,cource),class: "btn btn-primary",style:"color:black;" %>    
              <%= link_to 'Delete', department_cource_path(@department,cource),class: "btn btn-danger",style:"color:black;", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%else%>
          <td><%= link_to 'View The Deatails', cource_path(cource),class: "btn btn-info",style:"color:black;" %>
              <%= link_to 'Edit', edit_cource_path(cource) ,class: "btn btn-primary",style:"color:black;"%>
              <%= link_to 'Delete', cource_path(cource),class: "btn btn-danger",style:"color:black;", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>